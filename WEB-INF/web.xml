<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletListenerTester</servlet-name>
        <servlet-class>com.example.web.ListenerTesterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletListenerTester</servlet-name>
        <url-pattern>/ListenTest.do</url-pattern>
    </servlet-mapping>
    <context-param>
    	<param-name>breed</param-name>
    	<param-value>poodle</param-value>
    </context-param>
    <listener>
    	<listener-class>com.example.model.MyServletContextListener</listener-class>
    </listener>
</web-app>
